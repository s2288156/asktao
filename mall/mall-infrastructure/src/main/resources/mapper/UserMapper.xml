<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.asktao.mall.infrastructure.mapper.UserMapper">


    <select id="selectForUsername" resultType="com.asktao.mall.infrastructure.dataobject.UserDO">
        select id, username, password from t_user
        where username = #{username}
    </select>
</mapper>
